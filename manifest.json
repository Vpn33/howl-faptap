{
  "manifest_version": 3,
  "name": "Faptap Howl Integration",
  "version": "1.0",
  "description": "监测Faptap网页视频操作并调用Howl服务接口",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://faptap.net/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://*.eroscripts.com/*"
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://faptap.net/*",
        "https://iframe.mediadelivery.net/play/*"
      ],
      "js": [
        "common_video.js",
        "content.js"
      ]
    },
    {
      "matches": [
        "https://discuss.eroscripts.com/t/*"
      ],
      "js": [
        "ero_content.js"
      ]
    },
    {
      "matches": [
        "https://*.pornhub.com/view_video.php?viewkey=*",
        "https://xhamster.com/videos/*",
        "https://www.xvideos.com/video.*",
        "https://rule34video.com/video/*",
        "https://pixeldrain.com/u/*",
        "https://mega.nz/file/*",
        "https://mega.nz/folder/*",
        "https://gofile.io/d/*"
      ],
      "js": [
        "common_video.js",
        "video_listener.js"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}